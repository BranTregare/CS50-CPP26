{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "CodeLLDB: Debug",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceFolder}/build/Debug/${workspaceFolderBasename}",
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "C/C++ Runner: Debug",
      "type": "cppdbg",
      "request": "launch",
      "args": [],
      "stopAtEntry": false,
      "externalConsole": false,
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/build/Debug/${workspaceFolderBasename}",
      "MIMode": "gdb",
      "miDebuggerPath": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}